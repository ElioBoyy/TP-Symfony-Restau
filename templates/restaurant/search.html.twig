{% extends 'base.html.twig' %}

{% block title %}Recherche de Restaurants{% endblock %}

{% block body %}
<div class="bg-gray-100 min-h-screen py-12">
    <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-8 text-gray-800">Résultats de recherche pour "{{ query }}"</h1>

        <div class="mb-8">
            <form action="{{ path('restaurant_search') }}" method="GET" class="flex justify-center">
                <input type="text" name="q" value="{{ query }}" placeholder="Rechercher un restaurant..." class="w-full max-w-lg px-4 py-2 rounded-l-lg border-t border-b border-l text-gray-800 border-gray-200 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                <button type="submit" class="px-4 bg-blue-500 text-white font-semibold rounded-r-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                    Rechercher
                </button>
            </form>
        </div>

        <div id="restaurant-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% include 'restaurant/_search_results.html.twig' with {'restaurants': restaurants} %}
        </div>

        {% if total > restaurants|length %}
            <div class="text-center mt-8">
                <button id="load-more" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:-translate-y-1 hover:shadow-lg" data-page="{{ page + 1 }}">
                    Voir plus de résultats
                </button>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const loadMoreButton = document.getElementById('load-more');
    const restaurantList = document.getElementById('restaurant-list');

    if (loadMoreButton) {
        loadMoreButton.addEventListener('click', function() {
            const page = this.dataset.page;
            const url = new URL(window.location.href);
            url.searchParams.set('page', page);

            fetch(url, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                restaurantList.insertAdjacentHTML('beforeend', html);
                this.dataset.page = parseInt(page) + 1;

                if (restaurantList.children.length >= {{ total }}) {
                    this.style.display = 'none';
                }
            });
        });
    }
});
</script>
{% endblock %}

