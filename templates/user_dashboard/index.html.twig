{% extends 'base.html.twig' %}

{% block title %}Mon Dashboard{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Mon Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
            <h2 class="text-2xl font-semibold mb-4">Réservations à venir</h2>
            {% if upcomingReservations is empty %}
                <p class="text-gray-600">Vous n'avez pas de réservations à venir.</p>
            {% else %}
                <ul class="space-y-4">
                    {% for reservation in upcomingReservations %}
                        <li class="bg-white shadow rounded-lg p-4">
                            <h3 class="font-bold">{{ reservation.restaurant.name }}</h3>
                            <p class="text-sm text-gray-600">Date: {{ reservation.date|date('d/m/Y H:i') }}</p>
                            <p class="text-sm text-gray-600">Nombre de personnes: {{ reservation.nbPersonne }}</p>
                            {% if reservation.commentaire %}
                                <p class="text-sm text-gray-600">Commentaire: {{ reservation.commentaire }}</p>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

        <div>
            <h2 class="text-2xl font-semibold mb-4">Réservations passées</h2>
            {% if pastReservations is empty %}
                <p class="text-gray-600">Vous n'avez pas de réservations passées.</p>
            {% else %}
                <ul class="space-y-4">
                    {% for reservation in pastReservations %}
                        <li class="bg-white shadow rounded-lg p-4">
                            <h3 class="font-bold">{{ reservation.restaurant.name }}</h3>
                            <p class="text-sm text-gray-600">Date: {{ reservation.date|date('d/m/Y H:i') }}</p>
                            <p class="text-sm text-gray-600">Nombre de personnes: {{ reservation.nbPersonne }}</p>
                            {% if reservation.commentaire %}
                                <p class="text-sm text-gray-600">Commentaire: {{ reservation.commentaire }}</p>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

